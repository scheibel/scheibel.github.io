block variables
  - var PageName = "#{context.name}"
  - var PageID = "index"

doctype html
html(lang="en")
  include /partials/head

  body#page-top(data-spy = 'scroll')
    section#navbar
      include /partials/navbar
      .row.mb-4

    section.container#content
      .row
        .col-12.col-lg-9
          block content
        .col-12.col-lg-3 
          block sidecontent

    section#footer.container
      include /partials/footer

  include /partials/scripts
