block PrimaryNavigation
  -
    var NavItems = [
      { 'url':'/publications.html', 'title':publications.short, 'key':'publications' },
      { 'url':'/teaching.html', 'title':teaching.short, 'key':'teaching' },
      { 'url':'/projects.html', 'title':projects.short, 'key':'projects' },
      { 'url':'/news.html', 'title':'News', 'key':'news' },
      { 'disabled': true, 'url':'https://www.scheibel.dev','title':'Open Source','key':'open-source'},
    ];

nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container
    a.navbar-brand(href="/") #{context.name}
    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
      span.navbar-toggler-icon
    .collapse.navbar-collapse#navbarSupportedContent
      .navbar-nav
        each page,i in NavItems
          if page.disabled
            a.nav-link.disabled= page.title
          else
            if PageID === page.key
              a.nav-link(class="active", href=page.url)
                = page.title
            else
              a.nav-link(href=page.url)
                = page.title
